<!--ここに最近の投稿一覧が入る-->
<h1>Books</h1>
<% @books.each do |book| %>
  <p>title</p>
  <span><%= book.title %></span>
  <p>body</p>
  <span><%= book.body %></span>
  <span>
    <%= link_to "Show", "/books/new/#{book.id}" %>
    <!--<%= link_to "Show", books_new_path(book.id) %> この記述だとうまくいかなかった-->
  </span>

  <p>Edit</p>
  <p>Destroy</p>

<% end %>

<!--rails4章-->
<h1>New books</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url:books_path, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>